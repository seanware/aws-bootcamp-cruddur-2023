#! /usr/bin/bash

if [ -z "$1" ]; then # -z is zero length
  echo "No TASK_ID argument supplied eg ./bin/ecs/connect-to-service 160c72afe6c3471988aab899dfef8e2a backend-flask "
  exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then # -z is zero length
  echo "No CONTAINER_NAME argument supplied eg ./bin/ecs/connect-to-service 160c72afe6c3471988aab899dfef8e2a backend-flask "
  exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container  $CONTAINER_NAME \
--command "/bin/bash" \
--interactive
